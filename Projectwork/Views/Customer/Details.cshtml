@{
    Layout = "_CustomerLayout";
}

@model Videogame 

<div>
    <div class="container bg-secondary-subtle shadow-lg rounded border-black my-5 p-0 w-75">

        <div class="row g-0">

            <div class="col-md-4">
                <img src="@Model.ImgUrl" class="img-fluid rounded-start" alt="Immagine @Model.Name">
            </div>

            <div class="col-md-8">
                <div class="p-3">
                    <h1 class="mt-5 fs-5 mb-2"><strong>@Model.Name</strong></h1>
                    <p class="mb-2">@Model.Description</p>
                    <h2 class="mb-4"><strong>@Model.Price.ToString("0.00") €</strong></h2>
                </div>
            </div>

        </div>

    </div>
</div>