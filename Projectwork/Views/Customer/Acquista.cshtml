@model SaleTransactionForm

<h1 class="fs-4 fw-bold my-5 text-center">Vuoi acquistare questo prodotto?</h1>
<div>
    <div class="container bg-secondary-subtle shadow-lg rounded border-black my-5 p-0 w-75">

        <div class="row g-0">

            <div class="col-md-4">
                <img src="@Model.Videogame.ImgUrl" class="img-fluid rounded-start" alt="Immagine @Model.Videogame.Name">
            </div>

            <div class="col-md-8">
                <div class="p-3">
                    <h1 class="mt-5 fs-5 mb-2"><strong>@Model.Videogame.Name</strong></h1>
                    <p class="mb-2">@Model.Videogame.Description</p>
                    <h2 class="mb-4"><strong>@Model.Videogame.Price.ToString("0.00") €</strong></h2>
                    <form asp-controller="Customer" asp-action="Acquista" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="@Model.Transaction.Quantity" class="form-label fw-bolder">Quantità</label>
                            <input asp-for="@Model.Transaction.Quantity" type="number" value="@DateTime.Now" class="form-control rounded">
                            <span asp-validation-for="@Model.Transaction.Quantity" class="text-danger"></span>
                        </div>
                        <div>
                            <button type="submit" style="height: 2.5rem;" class="btn btn-primary bg-primary">Acquista</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>
