@model Videogame

<h1 class="fs-4 fw-bold my-5 text-center">Sei sicuro di voler eliminare il seguente prodotto?</h1>
<div>
    <div class="container bg-secondary-subtle shadow-lg rounded border-black my-5 p-0 w-75">

        <div class="row g-0">
            
            <div class="col-md-4">
                <img src="@Model.ImgUrl" class="img-fluid rounded-start" alt="Immagine @Model.Name">
            </div>

            <div class="col-md-8">
                <div class="p-3">
                    <h1 class="mt-5 fs-5 mb-2"><strong>@Model.Name</strong></h1>
                    <p class="mb-2">@Model.Description</p>
                    <h2 class="mb-4"><strong>@Model.Price.ToString("0.00") €</strong></h2>
                    <form asp-controller="ControlPanel" asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <div>
                            <button type="submit" style="height: 2.5rem;" class="btn btn-primary bg-primary">Delete</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>
