@model List<Videogame>

<div class="container mt-3">

    <div class="row">

        @foreach (Videogame videogame in Model)
        {
            <div class="col-lg-4 mb-3 d-flex align-items-stretch">

                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@videogame.ImgUrl" class="img-fluid rounded-start" alt="@videogame.Name">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title fs-2">@videogame.Name</h5>
                                <p class="card-text">@videogame.Description</p>
                                <p class="card-text"><small class="text-body-secondary"></small>@videogame.Price.ToString("0.00") €</p>
                                <a href="" class="btn btn-success"> <img width="24" height="24" src="https://cdn-icons-png.flaticon.com/128/1374/1374128.png" alt="acquista" /></a>
                                <a href="@Url.Action("Details", "Customer", new { id = videogame.Id })" class="btn btn-secondary"> <img width="24" height="24" src="https://cdn-icons-png.flaticon.com/128/9716/9716842.png" alt="Dettagli" /></a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        }
        
    </div>

</div>
